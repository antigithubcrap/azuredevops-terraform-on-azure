{
    "id": "A81201AB-236E-4BA9-9A7C-687972FE6384",
    "name": "terraform-on-azure",
    "friendlyName": "Terraform on Azure - Tools",
    "description": "Run Terraform over your Linux build agent host on Azure (with best practices).",
    "helpMarkDown": "[More Information](https://github.com/antigithubcrap/azuredevops-terraform-on-azure#readme)",
    "category": "Deploy",
    "visibility": [ "Build", "Release" ],
    "author": "Marceline Abadeer - x-Commerce Labs",
    "runsOn": [ "Agent" ],
    "version": {
        "Major": 0,
        "Minor": 0,
        "Patch": 2
    },
    "instanceNameFormat": "Terraform $(commandPickList)",
    "groups": [
        {
            "name": "advanced",
            "displayName": "Advanced",
            "isExpanded": true
        }
    ],
    "inputs": [
        {
            "name": "commandPickList",
            "type": "pickList",
            "label": "Command",
            "defaultValue": "Install",
            "required": true,
            "helpMarkDown": "Terraform command to execute.",
            "options": {
                "Install": "Install",
                "Output": "Output"
            },
            "properties": {
                "EditableOptions": false
            }
        },
        {
            "name": "versionPickList",
            "type": "pickList",
            "label": "Version to install",
            "defaultValue": "lastVersion",
            "required": true,
            "helpMarkDown": "Terraform version to install.",
            "options": {
                "lastVersion": "Last version",
                "customVersion": "Custom version"
            },
            "properties": {
                "EditableOptions": false
            },
            "visibleRule": "commandPickList == Install"
        },
        {
            "name": "customVersionString",
            "type": "string",
            "label": "Terraform version",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "Terraform version to install [(list of versions here)](https://releases.hashicorp.com/terraform/).",
            "visibleRule": "versionPickList == customVersion"
        },
        {
            "name": "useJsonFormatBoolean",
            "type": "boolean",
            "label": "Use JSON format",
            "defaultValue": "false",
            "required": false,
            "helpMarkDown": "Check if you want to output JSON format.",
            "visibleRule": "commandPickList == Output"
        },
        {
            "name": "outputVariablesMultiline",
            "type": "multiline",
            "label": "Output variables",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "Terraform output variables (one per line to avoid incorrect configuration).",
            "visibleRule": "commandPickList == Output"
        },
        {
            "name": "manageStateBoolean",
            "type": "boolean",
            "label": "Manage state in Azure Storage Account",
            "defaultValue": "false",
            "required": false,
            "helpMarkDown": "Check if you want to manage Terraform's state in Azure Storage Account.",
            "visibleRule": "commandPickList == Output"
        },
        {
            "name": "createBackendFileBoolean",
            "type": "boolean",
            "label": "Create an Azure Storage Account backend file",
            "defaultValue": "false",
            "required": false,
            "helpMarkDown": "Check if you want to create a backend file specification (backend.tf), if not, an Azure Storage Account backend specification must exist.",
            "visibleRule": "manageStateBoolean == true"
        },
        {
            "name": "azureStorageAccountNameString",
            "type": "string",
            "label": "Azure Storage Account name",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Azure Storage Account name.",
            "visibleRule": "manageStateBoolean == true"
        },
        {
            "name": "azureStorageAccountContainerNameString",
            "type": "string",
            "label": "Azure Storage Account container name",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Azure Storage Account container target name where to upload/download Terraform's state.",
            "visibleRule": "manageStateBoolean == true"
        },
        {
            "name": "terraformsStateKeyString",
            "type": "string",
            "label": "Terraform's state key",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Terraform's state key.",
            "visibleRule": "manageStateBoolean == true"
        },
        {
            "name": "terraformFilePath",
            "type": "filePath",
            "label": "Terraform path",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "Path where Terraform executable is located, leave it empty if using environment variable (export).",
            "groupName": "advanced"
        },
        {
            "name": "failOnStdErrBoolean",
            "type": "boolean",
            "label": "Fail on Standard Error",
            "defaultValue": "false",
            "required": false,
            "helpMarkDown": "Check if you want to fail this task if any errors are written to the StandardError stream.",
            "groupName": "advanced"
        }
    ],
    "execution": {
        "Node": {
            "target": "terraformtools.js"
        }
    }
}
